     sudo usermod -aG gpio www-data
   sudo setfacl -m u:www-data:rwx /run/user/1000
   sudo setfacl -m u:www-data:rw /run/user/1000/wayland-0

   sudo visudo
   www-data ALL=(ALL) NOPASSWD: /usr/bin/setfacl, /usr/bin/wlr-randr

