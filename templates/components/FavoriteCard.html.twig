<div {{ attributes }} class="card h-100 {{ this.displayModeColor }}">
    <!-- Image -->
    <img src="{{ favorite.displayUrl }}" alt="{{ favorite.title }}" class="card-img-top border border-4 border-black" style="max-height: 500px">

    <!-- Card Body -->
    <div class="card-body d-flex flex-column text-center">
        <h5 class="card-title mb-2 text-truncate">{{ favorite.title }}</h5>
        <p class="card-text text-muted mb-3">Artist: {{ favorite.artist }}</p>
        <button
                data-action="live#action"
                data-live-action-param="display"
                data-live-id-param="{{ favorite.id }}"
                class="{{ this.buttonCss }}"
                {{ this.disabled }}>
            Display
        </button>
    </div>
</div>