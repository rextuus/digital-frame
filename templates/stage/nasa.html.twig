{% extends 'base.html.twig' %}
{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('nasa') }}
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('nasa') }}
{% endblock %}
{% block body %}
    <div class="container">
        <figure>
            <img id="displayed-image" src="{{ image.url }}" alt="Nasa-Image"/>
            <figcaption>
                {{ image.explanation }}
            </figcaption>
        </figure>
    </div>
{% endblock %}